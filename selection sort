#include <iostream>
using namespace std;

int main()
{
    int n;
    int arr[10];

    cout << "ENTER VALUE FOR N: ";
    cin >> n;

    cout << "ENTER N NUMBERS:\n";
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    // Selection Sort Logic
    for (int i = 0; i < n - 1; i++)
    {
        int fixInd = i;

        for (int j = i + 1; j < n; j++)
        {
            if (arr[j] < arr[fixInd])
            {
                fixInd = j;
            }
        }

      
        int temp = arr[i];
        arr[i] = arr[fixInd];
        arr[fixInd] = temp;
    }

    cout << "SORTED LIST:\n";
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }

    return 0;
}
